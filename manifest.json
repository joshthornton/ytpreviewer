{
	"name": "YouTube Previewer",
	"version": "0.62",
	"manifest_version": 2,
	"description": "Previews YouTube Video on hover using thumbnails",
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"exclude_matches": [ "*://*.youtube.com/*" ],
			"css": [ "src/ytpreviewer.css" ],
			"js": [ "src/jquery.min.js", "src/cache.js", "src/spec.js", "src/ytpreviewer.js" ],
			"run_at": "document_end"
		} ],
	"permissions": [ "http://www.youtube.com/", "https://www.youtube.com/" ],
	"options_page": "src/options.html",
	"background": {
		"scripts": [ "src/background.js" ]
	},
	"icons":
		{ 
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
	"web_accessible_resources": [ "images/loading.gif" ]
}

			
